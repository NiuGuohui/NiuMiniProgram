<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/capsule_black_tran" />
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="@color/capsule_black_tran" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/capsule_white_tran" />
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="@color/capsule_white_tran" />
        </shape>
    </item>
</selector>