<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/capsule_width"
    android:layout_height="@dimen/capsule_height"
    android:background="@drawable/capsule_bg"
    android:orientation="horizontal"
    android:id="@+id/capsule_box">

    <ImageView
        android:id="@+id/capsule_menu"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:src="@mipmap/menu_light"
        android:padding="2dp"
        android:background="@drawable/capsule_menu_bg"
        android:contentDescription="小程序菜单" />

    <View
        android:id="@+id/capsule_split_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginVertical="6dp"/>

    <ImageView
        android:id="@+id/capsule_close"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@mipmap/close_light"
        android:clickable="true"
        android:padding="7dp"
        android:background="@drawable/capsule_close_bg"
        android:contentDescription="关闭小程序" />
</LinearLayout>